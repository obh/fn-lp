<ContentSection title="Compatibility" id="compatibility">
  <Fragment slot="lead">
    Flowwise <span class="text-primary">plays nice.</span>. Bring your own Payment{" "}
    <span class="text-primary">Processor</span>
    and deploy in your <span class="text-primary">platform</span>.
  </Fragment>
  <CompatibilityList
    items={frameworks}
    title="PAs"
    url="https://docs.astro.build/core-concepts/framework-components/"
  />
  <CompatibilityList
    items={platforms}
    title="Banks"
    url="https://docs.astro.build/guides/deploy/"
  />
</ContentSection>
