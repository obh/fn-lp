---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Bring Your Own Infrastructure",
    description:
      "Build your payment journey wherever you want.",
    icon: "mdi:computer-classic",
  },
  {
    title: "Gain visibility into execution",
    description:
      "Flowwise records every execution, its progress and state, providing new insights into payments and app performance.",
    icon: "mdi:search",
  },
  {
    title: "Secure by design",
    description:
      "Enables fine-grained access control and compliance. Your data never leaves your infrastructure.",
    icon: "mdi:secure",
  },
  {
    title: "Broad Integration",
    description:
      "Flowwise supports Cashfree, PayU, PayTM, Razorpay and and any of your preferred payment partner.",
    icon: "mdi:graphql",
  },
  {
    title: "Reduce cost by 10X",
    description:
      "You pay a fixed fee for Flowwise. Simple and straightforward pricing which is 10x lower than cloud orchestrators. ",
    icon: "mdi:currency-rupee",
  },
  {
    title: "Dedicated Support",
    description:
      "Flowwise is powered by Cashfree and our expertise in handling payments for some of the largest enterprises in India.",
    icon: "mdi:support",
  },
];
---

<ContentSection title="Features" id="features">
  <Fragment slot="lead">
    Flowwise comes <span class="text-primary">batteries included</span>. It takes
    the best parts of
    <span class="text-primary">state-of-the-art</span>
    cloud orchestration and adds its own <span class="text-primary">innovations</span>.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full icon-hover" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>

<style>
  .icon-hover {
    transition: color 0.3s ease;
  }

  .icon-hover:hover {
    color: rgb(152, 195, 121); /* Replace with your preferred color */
  }
</style>